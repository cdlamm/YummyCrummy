<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thememeteam.com.yummycrummyapp5.ViewEditProfile2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/nameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Name" />
    <!--lskghdgh-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/bdayField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Birthday"
        android:layout_below="@+id/nameField"
        android:layout_alignRight="@+id/nameField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderField"
        android:layout_below="@+id/bdayField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Gender"
        android:layout_alignRight="@+id/bdayField"
        android:layout_alignEnd="@+id/bdayField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Reviews"
        android:id="@+id/textView3"
        android:layout_below="@+id/genderField"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSubmit"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Changes"
        android:id="@+id/submitChangesButton"
        android:layout_toEndOf="@+id/bdayField"
        android:layout_below="@+id/listView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView3"
        android:layout_alignEnd="@+id/listView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_toEndOf="@+id/submitChangesButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toStartOf="@+id/btnSubmit" />

</RelativeLayout>
